<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %> 
    

<body>

    <%- include('../partials/header') %> 


<main class="main-login">
    <div class="formulario">

        <h1 class="b-de-vuelta">INICIAR SESIÓN</h1>
        
        <form action="/login" method="POST" class="form" id="form">
        
            <div class="login">

                    <label for="email">Ingrese su correo electrónico</label>
                    <input type="email"  id="email" name="email" placeholder="Ingrese su email" >
                    <small class="errors"></small>

                    <%  if (locals.errors && errors.email) {  %>
                        <div class="text-danger">
                            <%= errors.email.msg %> 
                        </div>
                        <% } %>  
                
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" id="password" placeholder="Ingrese su contraseña" >
                    <small class="errors"></small>
                    

                    <% if (locals.errors && errors.password) { %>
                        <div class="text-danger">
                            <%= errors.password.msg %> 
                        </div>
                    <% } %>


                    <div class="texto">
                        <label for="recordarme">
                            <input type="checkbox" name="recordarme" id="recordarme" selected>
                                Recordarme</label>
                    </div>

            

                    <button class="iniciar" type="submit">Ingresar</button>


                    <div class="avisos">

                        <div class="olvidar">
                            <a href="/recuperar" class="olv"> - Olvidé mi contraseña -</a>
                        
                        </div>
                    
                        <div class="cuenta-regist">
                                <p class="b-verte">¿Aún no tienes una cuenta? </p> 

                            <a href="/register" class="regist">Regístrate</a>
                        </div>

                    
                    </div> 
                
                    <div class="logoL">
                            <img src="/img/este_si3.png" width="95" alt="LogoMPC">
                    </div>

                    
            </div>
        </form>
    </div>

</main>

    <%- include('../partials/footer') %> 
    
</body>
</html>

<script src="/js/formularioL.js"></script>