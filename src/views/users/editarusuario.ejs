                            <label for="contraeña"></label>
                            <input 
                            type="password" 
                            class="reg" 
                            name="otraPassword" 
                            id="contraeña" 
                            placeholder="Confirmar Contraseña" 
                            value=""
                            >
                        
                </form>

                        <button  class="reg2" type="submit" href="/perfil/edit/<%= user.id %>" ><a >Actualizar datos</a> </button>
                    
                </div>
        </div>

    </div>

    <%- include('../partials/footer') %>
    
