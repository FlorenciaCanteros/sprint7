                    <h1 class="registrate">EDITAR PERFIL</h1><br>
                        
                            <label ></label>
                            <input 
                            type="text" 
                            class="reg " 
                            name="nombre" 
                            id="nombre" 
                            placeholder="Ingresa tu nombre" 
                            value="<%= user.name %>"
                            >

                            <label for="apellido"></label>
                            <input 
                            type="text" 
                            class="reg " 
                            name="apellido" 
                            id="apellido" 
                            placeholder="Ingresa tu apellido" 
                            value="<%= user.lastname %>"
